{
  "name": "website",
  "version": "1.0.0",
  "author": "chentao",
  "scripts": {
    "dev:web": "npx pnpm --filter @website/web run dev",
    "dev:api": "npx pnpm --filter @website/api run dev",
    "build:web": "npx pnpm --filter @website/web run build",
    "build:api": "npx pnpm --filter @website/api run build",
    "release:web": "tsnd scripts/release.ts --type=web",
    "release:api": "tsnd scripts/release.ts --type=api",
    "release:all": "tsnd scripts/release.ts --type=all",
    "format": "prettier --write --parser typescript \"packages/**/*.(t|j)s?(x)\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^2.4.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  }
}
