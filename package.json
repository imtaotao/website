{
  "name": "website",
  "version": "1.0.0",
  "author": "chentao",
  "scripts": {
    "dev:web": "pnpm --filter @website/web run dev",
    "dev:api": "pm2 stop 0 && pnpm --filter @website/api run dev",
    "release:web": "pnpm --filter @website/web run build",
    "release:api": "pnpm --filter @website/api run build && pm2 restart 0",
    "format": "prettier --write --parser typescript \"packages/**/*.(t|j)s?(x)\""
  },
  "devDependencies": {
    "prettier": "^2.4.1"
  }
}
