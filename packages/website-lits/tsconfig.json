{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "outDir": "dist",
    "module": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "composite": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}