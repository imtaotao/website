{
  "name": "website",
  "version": "1.0.0",
  "author": "chentao",
  "scripts": {
    "dev:web": "npx pnpm --filter @website/web run dev",
    "dev:api": "npx pnpm --filter @website/api run dev",
    "build:web": "npx pnpm --filter @website/web run build",
    "build:api": "npx pnpm --filter @website/api run build",
    "release:web": "tsnd --respawn scripts/release.ts --type=web",
    "release:api": "tsnd --respawn scripts/release.ts --type=api",
    "release:all": "tsnd --respawn scripts/release.ts --type=all",
    "format": "prettier --write --parser typescript \"packages/**/*.(t|j)s?(x)\""
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "prettier": "^2.4.1"
  }
}
